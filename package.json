	"scripts": {
		"check": "biome check --write .",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo db:generate && turbo build",
		"preview": "turbo preview",
		"update": "bun update --interactive --recursive",
		"clean": "git clean -xdf node_modules .turbo",
		"clean:workspaces": "turbo run clean",
		"db:push": "turbo -F @opium/db db:push",
		"db:studio": "turbo -F @opium/db db:studio",
		"db:generate": "turbo -F @opium/db db:generate",
		"db:migrate": "turbo -F @opium/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"memoirist": "^0.4.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@opium/biome-config": "workspace:*",
		"@types/bun": "^1.3.3",
		"tsdown": "^0.16.8",
		"turbo": "^2.6.1"
	},
	"packageManager": "bun@1.3.2"
