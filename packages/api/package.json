{
	"name": "@opium/api",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"clean": "git clean -xdf .cache .turbo dist node_modules"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"dependencies": {
		"@orpc/server": "catalog:",
		"@orpc/client": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/zod": "catalog:",
		"elysia": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@opium/auth": "workspace:*",
		"@opium/db": "workspace:*"
	},
	"devDependencies": {
		"@opium/tsconfig": "workspace:*",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	}
}
