{
	"name": "@opium/db",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"clean": "git clean -xdf .cache .turbo dist node_modules"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./drizzle": {
			"types": "./dist/drizzle.d.ts",
			"default": "./src/drizzle.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.2",
		"dotenv": "catalog:",
		"drizzle-orm": "catalog:",
		"pg": "^8.14.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@opium/tsconfig": "workspace:*",
		"drizzle-kit": "^0.31.2",
		"@types/pg": "^8.11.11",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	}
}
